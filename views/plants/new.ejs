<%- include('../partials/header') %>

<h1>Add a new plant</h1>
<form id="new-form" action="/index" method="post">
	<label>Photo
		<br>
		<input type="file" name="user[image]" id="user-img">
	</label>
	<br><br>
	<label>Plant name
		<br>
		<input type="text" name="name">
	</label>
	<br><br>
	<label>Water
		<br>
		<select name="water">
			<option value="dry-full">When soil has dried out completely</option>
			<option value="dry-quarter">When soil has dried out three-fourths to the bottom</option>
			<option value="dry-half">When soil has dried out halfway to the bottom</option>
			<option value="top-dry">When top 1-2" of soil is dry</option>
		</select>
	</label>
	<br><br>
	<label>Light
		<br>
		<select name="light">
			<option value="bright-direct">Bright direct light</option>
			<option value="bright-indirect">Bright indirect light</option>
			<option value="medium-direct">Medium direct light</option>
			<option value="medium-indirect">Medium indirect light</option>
		</select>
	</label>
	<br><br>
	<label>Date bought
		<br>
		<input type="date" name="bought">
	</label>
	<br><br>
	<label>Date of last repot
		<br>
		<input type="date" name="repot">
	</label>
	<br><br>
	<input id="new-plant" type="submit" value="Add your new plant!">
</form>

<%- include('../partials/footer') %>